{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true
  },
  "typeRoots": [
    "./src/types.d.ts"
  ],
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
